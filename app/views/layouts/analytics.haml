!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title= content_for?(:title) ? yield(:title) : 'Remote Manager'

    / %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js"}
    / %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.2/utils/Draggable.min.js"}
    / %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/plugins/ScrollToPlugin.min.js"}

    %link{:href => "//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css", :rel => "stylesheet"}/
    %script{:src => "//code.jquery.com/jquery-1.10.2.js"}
    %script{:src => "//code.jquery.com/ui/1.11.4/jquery-ui.js"}

    = favicon_link_tag 'favicon.ico'

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track' => 'reload'
    = csrf_meta_tags
  %body
    %header
      
    %main{:role => "main"}
      #error-messages= render 'layouts/messages'
      %ul.sidebar__list
        %li
          %a{:href => "/"}= image_tag asset_url('remote-year.png'), style: 'padding-top:10px;'
          = link_to 'Pipeline', '/admin/pipeline', class: "sidebar__link sidebar__link--active"
          = link_to 'Users', '/admin/users', class: "sidebar__link sidebar__link--inactive"
          = link_to 'Applicants', '/admin/applicants', class: "sidebar__link sidebar__link--inactive"

      = yield

    %footer
      = render 'layouts/footer'



:css
  
  html {
    box-sizing: border-box;
  }
  body {
    color: #293f54;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif;
    font-size: 1em;
    line-height: 1.5;
    background-color: rgb(246,247,247);
  }

  a {
    color: #2a94d6;
    text-decoration: none;
    -webkit-transition: color 250ms cubic-bezier(0.215, 0.61, 0.355, 1);
    transition: color 250ms cubic-bezier(0.215, 0.61, 0.355, 1);
  }

  .main-content {
    background-color: #fff;
    box-shadow: 0 2px 4px rgba(41, 63, 84, 0.24), 0 2px 6px rgba(41, 63, 84, 0.12);
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    overflow-y: auto;
  }

  .app-container {
    margin-right: auto;
    margin-left: auto;
    -webkit-box-align: stretch;
    -ms-flex-align: stretch;
    align-items: stretch;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    max-width: 100em;
    min-height: 100vh;
  }
  .sidebar {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 auto;
    flex: 0 0 auto;
    max-width: 12em;
    overflow-y: auto;
    padding: 0 1.5em 1.5em;
  }

  .sidebar__list {
    -webkit-box-flex: 0;
    -ms-flex: 0 0 auto;
    flex: 0 0 auto;
    justify-content: flex-start;
    max-width: 12em;
    overflow-y: auto;
    padding: 0 1.5em 1.5em;
    height: 100vh;
    float: left;
    background-color: rgb(246,247,247);
  }
  .sidebar__link {
    display: block;
    padding-top: 1.5em;
    -webkit-transition: color 0.05s linear;
    transition: color 0.05s linear;
    float: left; 
    width: 100%;
    font-weight: 600;


    &:hover {
      color: #2a94d6;
    }
  }
